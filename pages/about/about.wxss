/* pages/about/about.wxss */
.content{

}
.per-box{
  display: flex;
  width: 100%;
  height: 200rpx;
  align-items: center;
  justify-content: flex-start;
  border-bottom: 20rpx solid #eee;
}
.per-left{
  width: 20%;
  text-align: center;
}
.per-left image{
    width:100rpx;
    height: 100rpx;
    border-radius: 50%;

}
.per-right{
  width: 70%;
  margin-left: 40rpx;
}
.per-text{
  font-size: 35rpx;
  font-weight: 500;
  text-decoration: underline;
  padding-bottom: 10rpx;
}
.per-text-fen text{
  padding-right: 30rpx;
}



.app{
  height: 500rpx;
  border-bottom: 20rpx solid #eee;
}
.app-top{
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.top-need{
  font-size: 35rpx;
  padding-left: 40rpx;
}
.top-all{
  display: inline-flex;
  color: #666;
  padding-right: 30rpx;
}
.top-all image{
  width: 50rpx;
  height: 50rpx;
}
.app-body{
  height: 400rpx;
  display: flex;
  flex-wrap: wrap;
}
.body-li{
  width: 25%;
  height: 200rpx;
  text-align: center;
  font-size: 24rpx;
}
.body-li image{
  width: 100rpx;
  height: 100rpx;
  margin-top: 20rpx;
}
.api-heng{
  height: 100rpx;
  border-bottom: 1px solid #eee;
}
.heng-all{
  display: flex;
  height: 100rpx;
}
.heng-left{
  width: 15%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.heng-left image{
  width: 50rpx;
  height: 50rpx;
}
.heng-right{
  width: 85%;
  height: 100rpx;
  font-size: 40rpx;
  display: flex;
  align-items: center;
}

.out{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 100rpx;
}

.out-btn{
  width: 40%;
  height: 80rpx;
  line-height: 80rpx;
  background: red;
  border-radius: 20rpx;
  text-align: center;
  font-size: 40rpx;
  font-weight: 300;

}