.classify{
  width: 100%;
  height: 1000rpx;
  margin-top: 20rpx;
  display: flex;
}
.classify-left{
  width: 25%;
  height: 1000rpx;
}
.classify-right{
  width: 75%;
  height: 1000rpx;
}
.left-text{
  text-align: center;
  font-size: 30rpx;
  /* padding: 30rpx 10rpx; */
  height: 100rpx;
  line-height: 100rpx;
}
.right-title{
  font-size: 40rpx;
  font-weight: 600;
  margin: 20rpx 30rpx;
  padding-bottom: 10rpx;
  border-bottom: 4rpx solid #333;
}
.right-cont{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  text-align: center;
}
.cont-tu{
  width: 42%;
  height: 150rpx;
  margin: 20rpx 20rpx;
}
.cont-tu image{
  width: 60%;
  height: 120rpx;
}
.cont-tu view{
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.cont-tu view text{
  font-size: 20rpx;  
}
.active{
  background: red;
  color: #fff;
}